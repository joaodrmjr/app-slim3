{% extends 'templates/app.twig' %}

{% block content %}


<h1>Keno Game</h1>
<div class="keno">

	<div class="faixaPremiacoes">
		<table>
			<tr class="hits">
				<th>Hit</th>
			</tr>
			<tr class="rewards">
				<th>Reward</th>
			</tr>
		</table>
	</div>

	<div class="numeros">
		<table id="tableNumeros">
		{% for i in 1..5 %}
			<tr>
			{% for j in 1..8 %}
			{% set n = (i-1)*8+j %}	
				<td id="btNumber{{ n }}" value="{{ n }}">{{ n }}</td>
			{% endfor %}
			</tr>
		{% endfor %}
		</table>
	</div>

	<div class="balls">
		{% for i in 0..9 %}
		<span id="ball{{ i }}">{{ i }}</span>
		{% endfor %}
	</div>

	<div class="valor">
		<p>Valor da aposta:</p>
		<input type="text" id="betValue" placeholder="0.00">
		<button>/2</button>
		<button>x2</button>
	</div>

	<div class="action">
		<button id="btLimpar">LIMPAR</button>
		<button id="btSortear">SORTEAR</button>
	</div>
</div>

{% endblock %}

{% block scripts %}
<script src="{{ base_url() }}/keno.js"></script>
{% endblock %}